{
  "compilerOptions": {
    "target": "es2017",                                     
    "lib": ["ES6"],                                        
    "module": "commonjs",                                
    "rootDir": "./src", 
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                                           
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true                                 
  }
}
